<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:paddingBottom="18dp"
        android:background="@drawable/rounded_corner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="22dp"
            android:layout_marginEnd="22dp"
            android:background="@android:color/transparent"
            android:text="Lampe - Cuisine"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="22dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="22dp"
            android:background="@android:color/transparent"
            android:text="Light"
            android:textColor="#072246"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_name" />

        <ImageView
            android:id="@+id/image_mode"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginTop="12dp"
            android:tint="@color/black"
            android:layout_marginStart="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/product_type"
            app:srcCompat="@drawable/ic_baseline_model_training_24"
            tools:ignore="UseAppTint" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="Mode OFF "
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/product_type"
            app:layout_constraintStart_toEndOf="@+id/image_mode" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/positionTextView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text=": 19/05/2022 - 20 jours"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/product_type"
            app:layout_constraintStart_toEndOf="@+id/product_mode" />

        <ImageView
            android:id="@+id/image_intensity"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_mode"
            app:srcCompat="@drawable/ic_baseline_model_training_24"
            app:tint="@color/black" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_intensity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"

            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="Intensitiy: 0 "
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/image_mode"
            app:layout_constraintStart_toEndOf="@+id/image_intensity" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/positionTextView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:background="@android:color/transparent"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text=": Reims centre"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/image_mode"
            app:layout_constraintStart_toEndOf="@+id/product_intensity" />

        <ImageView
            android:id="@+id/image_location"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_intensity"
            app:srcCompat="@drawable/ic_baseline_location_on_24" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/product_position"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="Position : 4"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/image_intensity"
            app:layout_constraintStart_toEndOf="@+id/image_location" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/positionTextView5"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text=": 12,05  / heure"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/image_intensity"
            app:layout_constraintStart_toEndOf="@+id/product_position" />

        <ImageView
            android:id="@+id/image_temperature"
            android:layout_width="19dp"
            android:layout_height="19dp"
            android:layout_marginTop="12dp"
            android:layout_marginStart="22dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/image_location"
            app:srcCompat="@drawable/ic_baseline_location_on_24"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/temperature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:text="Température : 24°"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/image_location"
            app:layout_constraintStart_toEndOf="@+id/image_location" />



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/detailLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:singleLine="false"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="22dp"
            android:text="Voir le détail >"
            android:textAllCaps="false"
            android:textAlignment="viewEnd"
            android:textColor="@color/black"
            android:textSize="14dp"
            android:layout_marginStart="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/temperature" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>






